<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Set</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set</h1>
          <!-- Form -->
          <form action="/lego/editSet" method="POST" class="w-full max-w-md">

            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" id="name" name="name" required value="<%= set.name %>">
            </div>

            <div class="form-group">
              <label for="year">Year:</label>
              <input type="number" id="year" name="year" required value="<%= set.year %>">
            </div>

            <div class="form-group">
              <label for="num_parts">Number of Parts:</label>
              <input type="number" id="num_parts" name="num_parts" required value="<%= set.num_parts %>">
            </div>

            <div class="form-group">
              <label for="img_url">Image URL:</label>
              <input type="url" id="img_url" name="img_url" required value="<%= set.img_url %>">
            </div>

            <div class="form-group">
              <label for="theme_id">Theme:</label>
              <select id="theme_id" name="theme_id" required>
                <% themes.forEach(theme => { %>
                  <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                    <%= theme.name %>
                  </option>
                <% }) %>
              </select>
            </div>

            <div class="form-group">
              <label for="set_num">Set Number:</label>
              <input type="text" id="set_num" name="set_num" readonly value="<%= set.set_num %>">
            </div>

            <!-- Add the "Delete Set" button with a link to the delete route -->
            <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete Set</a>

            <!-- button -->
            <button type="submit" class="btn btn-primary">Update Set</button>
          </form>
        </div>
      </div>
    </div>

  </div>

</body>

</html>
