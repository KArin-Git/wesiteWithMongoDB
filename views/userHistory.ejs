<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User History - Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>

  <%- include('partials/navbar',{page: 'userHistory'}) %>

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6 text-center">
      <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
      <p>User History: <%= session.user.email %></p>
    </div>

    <br />

    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Login Date/Time</th>
            <th>Client Information</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach(function(history){ %>
            <tr>
              <td><%= new Date(history.dateTime).toLocaleString() %></td>
              <td><%= history.userAgent %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    
  </div>
</body>
</html>
